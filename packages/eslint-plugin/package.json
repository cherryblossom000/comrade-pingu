{
  "name": "@comrade-pingu/eslint-plugin",
  "version": "1.0.1",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/eslint-plugin"
  },
  "main": "dist/index",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext ts .",
    "lint:dev": "pnpm lint -- --cache",
    "typecheck": "tsc -b tsconfig.typecheck.json",
    "build": "tsc -b src",
    "build:dev": "tsc -b src/tsconfig.dev.json",
    "watch": "pnpm build:dev -- -w"
  },
  "dependencies": {
    "@typescript-eslint/experimental-utils": "^4.5.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^4"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.4",
    "eslint-plugin-eslint-plugin": "^2.3.0"
  }
}
