{
  "name": "@comrade-pingu/bot",
  "version": "2.7.0",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/bot"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,ts .",
    "lint:dev": "pnpm lint -- --cache",
    "typecheck": "tsc -b tsconfig.typecheck.json",
    "build": "tsc -b src && pnpm copy && pnpm docs",
    "build:dev": "tsc -b src/tsconfig.dev.json && pnpm copy && pnpm docs",
    "watch": "tsc -b src/tsconfig.dev.json -w",
    "test": "jest",
    "test:dev": "jest -c jest.config.dev.js",
    "copy": " (cd dist && mkdir assets; cp -r ../assets/img assets/img)",
    "docs": "ts-node -P scripts/tsconfig.json scripts/docs && mkdir -p dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css"
  },
  "dependencies": {
    "@discordjs/opus": "0.3.2",
    "clean-stack": "^3.0.0",
    "discord.js": "^12.4.0",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.2",
    "ms": "^2.1.2",
    "node-fetch": "^2.6.1",
    "yt-search": "^2.3.3",
    "ytdl-core": "^3.4.2"
  },
  "devDependencies": {
    "@comrade-pingu/eslint-plugin": "1.1.0",
    "@types/express": "^4.17.8",
    "@types/mongodb": "^3.5.31",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.19.0",
    "@types/node-fetch": "^2.5.7",
    "@types/yt-search": "^2.3.0",
    "dotenv": "^8.2.0"
  }
}
