{
  "name": "@comrade-pingu/bot",
  "version": "2.13.4",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/bot"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext ts .",
    "lint:dev": "pnpm lint -- --cache",
    "build": "tsc -b src",
    "copy": "(cd dist && mkdir assets; rm -r assets/img; cp -r ../assets/img assets/img)",
    "docs": "ts-node -P scripts/tsconfig.json -T scripts/docs && mkdir -p dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css",
    "postbuild": "pnpm copy && pnpm run docs",
    "build:all": "tsc -b && pnpm postbuild",
    "watch": "tsc -b -w",
    "start": "node .",
    "test": "jest",
    "test:dev": "jest -c jest.config.dev.js"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.3",
    "clean-stack": "^3.0.1",
    "discord.js": "^12.5.1",
    "escape-string-regexp": "^4.0.0",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "mathjax": "^3.1.2",
    "mathjs": "^8.1.1",
    "mongodb": "^3.6.3",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.1",
    "sharp": "^0.27.0",
    "yt-search": "^2.5.1",
    "ytdl-core": "^4.4.3"
  },
  "devDependencies": {
    "@comrade-pingu/eslint-plugin": "1.1.1",
    "@types/koa": "^2.11.6",
    "@types/koa-static": "^4.0.1",
    "@types/mathjax": "^0.0.36",
    "@types/mathjs": "^6.0.11",
    "@types/mongodb": "^3.6.3",
    "@types/ms": "^0.7.31",
    "@types/node": "~12.12.70",
    "@types/node-fetch": "^2.5.7",
    "@types/sharp": "^0.27.1",
    "@types/yt-search": "^2.3.0",
    "dotenv": "^8.2.0",
    "mathjax-full": "^3.1.2"
  }
}
