{
  "name": "@comrade-pingu/bot",
  "version": "3.3.0",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/bot"
  },
  "type": "module",
  "main": "dist/src/server.js",
  "engines": {
    "node": ">=16.6"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext ts .",
    "lint:dev": "pnpm lint -- --cache",
    "copy": "cd dist && (mkdir assets; trash assets/img; cp -r ../assets/img assets/img)",
    "docs": "node scripts/dist/docs && (mkdir -p dist/assets/css; purgecss -c purgecss.config.cjs -o dist/assets/css)",
    "postbuild": "pnpm copy && pnpm run docs",
    "build": "tsc -b src && pnpm postbuild",
    "build:all": "tsc -b && pnpm postbuild",
    "watch": "tsc -b -w",
    "start": "node .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:dev": "pnpm test -- -c jest.config.dev.cjs"
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "clean-stack": "^3.0.1",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "escape-string-regexp": "^4.0.0",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "mathjax": "^3.2.0",
    "mathjs": "^9.4.4",
    "mongodb": "^4.1.1",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.2",
    "sharp": "^0.29.1",
    "tslib": "^2.3.1",
    "yt-search": "^2.10.1",
    "ytdl-core": "^4.9.1"
  },
  "devDependencies": {
    "@comrade-pingu/eslint-plugin": "workspace:1.1.1",
    "@types/jest": "^27.0.1",
    "@types/koa": "^2.13.4",
    "@types/koa-static": "^4.0.2",
    "@types/mathjax": "^0.0.37",
    "@types/ms": "^0.7.31",
    "@types/node": "~16.9.1",
    "@types/node-fetch": "^2.5.12",
    "@types/sharp": "^0.29.1",
    "@types/yt-search": "^2.3.2",
    "jest": "^27.2.0",
    "mathjax-full": "^3.2.0",
    "ts-jest": "^27.0.5",
    "type-fest": "^1.4.0"
  }
}
