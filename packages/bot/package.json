{
  "name": "@comrade-pingu/bot",
  "version": "3.1.3",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/bot"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext ts .",
    "lint:dev": "pnpm lint -- --cache",
    "copy": "cd dist && (mkdir assets; trash assets/img; cp -r ../assets/img assets/img)",
    "docs": "node --experimental-modules scripts/dist/docs && (mkdir -p dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css)",
    "_postbuild": "pnpm copy && pnpm run docs",
    "build": "tsc -b src && pnpm _postbuild",
    "build:all": "tsc -b && pnpm _postbuild",
    "watch": "tsc -b -w",
    "start": "node .",
    "test": "jest",
    "test:dev": "jest -c jest.config.dev.js"
  },
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "clean-stack": "^3.0.1",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "escape-string-regexp": "^4.0.0",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "mathjax": "^3.1.4",
    "mathjs": "^9.4.2",
    "mongodb": "^3.6.9",
    "ms": "^2.1.3",
    "node-fetch": "^2.6.1",
    "sharp": "^0.28.3",
    "tslib": "^2.3.0",
    "yt-search": "^2.8.0",
    "ytdl-core": "^4.8.2"
  },
  "devDependencies": {
    "@comrade-pingu/eslint-plugin": "1.1.1",
    "@types/koa": "^2.13.3",
    "@types/koa-static": "^4.0.1",
    "@types/mathjax": "^0.0.36",
    "@types/mongodb": "^3.6.17",
    "@types/ms": "^0.7.31",
    "@types/node": "~12.12.70",
    "@types/node-fetch": "^2.5.10",
    "@types/sharp": "^0.28.3",
    "@types/yt-search": "^2.3.0",
    "mathjax-full": "^3.1.4"
  }
}
