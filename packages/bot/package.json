{
  "name": "@comrade-pingu/bot",
  "version": "2.6.1",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu",
    "directory": "packages/bot"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 --ext .js,ts .",
    "lint:dev": "pnpm run lint -- --cache",
    "typecheck": "tsc -p src/tsconfig.json --noEmit & tsc -p tests/tsconfig.json & tsc -p scripts/tsconfig.json & tsc -p tsconfig.jest-config.json",
    "build": "tsc -p src/tsconfig.json && pnpm run copy && pnpm run docs",
    "build:dev": "tsc -p src/tsconfig.json --sourceMap --incremental && pnpm run copy",
    "watch": "tsc -p src/tsconfig.json --sourceMap --incremental -w",
    "test": "jest",
    "test:dev": "jest -c jest.config.dev.js",
    "copy": " (cd dist && mkdir assets; cp -r ../assets/img assets/img)",
    "docs": "ts-node -P scripts/tsconfig.json scripts/docs && mkdir -p dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css"
  },
  "dependencies": {
    "@discordjs/opus": "0.3.2",
    "clean-stack": "^3.0.0",
    "discord.js": "^12.3.1",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.2",
    "ms": "^2.1.2",
    "node-fetch": "^2.6.1",
    "yt-search": "^2.3.1",
    "ytdl-core": "^3.3.0"
  },
  "devDependencies": {
    "@comrade-pingu/eslint-plugin": "1.0.1",
    "@types/express": "^4.17.8",
    "@types/mongodb": "^3.5.27",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.12.62",
    "@types/node-fetch": "^2.5.7",
    "@types/yt-search": "^2.0.0",
    "dotenv": "^8.2.0"
  }
}
