{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
