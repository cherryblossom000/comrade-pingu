{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es2019",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
