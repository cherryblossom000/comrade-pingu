{
  "name": "comrade-pingu",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/bot",
    "packages/commitlint-plugin",
    "packages/eslint-plugin",
    "packages/semantic-release",
    "packages/url-shim"
  ],
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": "github:cherryblossom000/comrade-pingu",
  "engines": {
    "node": ">=16.6"
  },
  "type": "module",
  "main": "packages/bot/dist/src/server.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo run lint && eslint --max-warnings 0 --cache **/*.config*.cjs **/.eslintrc.cjs",
    "build": "turbo run build && turbo run build:site",
    "watch": "tsc -b -w",
    "clean": "trash '**/{*.tsbuildinfo,.eslintcache,dist}' '!**/node_modules/**'",
    "test": "turbo run test",
    "test:dev": "turbo run test:dev",
    "register-commands": "node packages/scripts/dist/register-commands",
    "start": "dum -c packages/bot start"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "globalDependencies": [
      "tsconfig.settings.json",
      ".eslintrc.cjs"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": ["dist/**", "*.tsbuildinfo"]
      },
      "build:site": {
        "dependsOn": [
          "build"
        ],
        "outputs": ["dist/assets/**", "README.md"]
      },
      "lint": {
        "outputs": [".eslintcache"]
      },
      "test": {
        "outputs": []
      },
      "test:dev": {
        "outputs": []
      }
    }
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "15.0.0-beta.27",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/types": "^16.0.0",
    "@comrade-pingu/commitlint-plugin": "workspace:^1.0.1",
    "@comrade-pingu/semantic-release": "workspace:^1.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^16.11.19",
    "@types/url-shim": "workspace:^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "commitizen": "^4.2.4",
    "commitlint": "^16.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "multi-semantic-release": "^2.11.0",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "semantic-release": "^18.0.1",
    "trash-cli": "^5.0.0",
    "turbo": "^1.0.24",
    "typescript": "~4.5.4"
  }
}
