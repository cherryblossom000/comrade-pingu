{
  "name": "comrade-pingu",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/bot",
    "packages/commitlint-plugin",
    "packages/eslint-plugin",
    "packages/semantic-release",
    "packages/url-shim"
  ],
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": "github:cherryblossom000/comrade-pingu",
  "engines": {
    "node": ">=16.6"
  },
  "type": "module",
  "main": "packages/bot/dist/src/server.js",
  "scripts": {
    "prepare": "husky install",
    "lint:config": "eslint --max-warnings 0 **/*.config*.cjs **/.eslintrc.cjs",
    "lint:config:dev": "pnpm lint:config -- --cache",
    "lint": "eslint --max-warnings 0 --ext ts,cjs .",
    "lint:dev": "pnpm lint -- --cache",
    "build": "tsc -b && pnpm postbuild",
    "postbuild": "echo '{\"type\": \"module\"}' | tee scripts/dist/package.json > packages/bot/scripts/dist/package.json && pnpm m run postbuild",
    "watch": "tsc -b -w",
    "clean": "trash '**/{*.tsbuildinfo,.eslintcache,dist}' '!**/node_modules/**'",
    "test": "pnpm m run test",
    "test:dev": "pnpm m run test:dev",
    "docs": "pnpm m run docs",
    "start": "pnpm -C packages/bot start",
    "register-commands": "pnpm -C packages/bot register-commands"
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "15.0.0-beta.27",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/types": "^16.0.0",
    "@comrade-pingu/commitlint-plugin": "workspace:^1.0.1",
    "@comrade-pingu/semantic-release": "workspace:^1.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.11.17",
    "@types/url-shim": "workspace:^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "commitizen": "^4.2.4",
    "commitlint": "^16.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "markdown-it": "^12.3.0",
    "markdown-table": "^3.0.2",
    "multi-semantic-release": "^2.11.0",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "semantic-release": "^18.0.1",
    "trash-cli": "^5.0.0",
    "type-fest": "^2.8.0",
    "typescript": "~4.5.4"
  }
}
