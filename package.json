{
  "name": "comrade-pingu",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/bot",
    "packages/commitlint-plugin",
    "packages/eslint-plugin",
    "packages/semantic-release"
  ],
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": "github:cherryblossom000/comrade-pingu",
  "engines": {
    "node": ">=12"
  },
  "main": "packages/bot/dist/src/server",
  "scripts": {
    "prepare": "husky install",
    "lint:config": "eslint --max-warnings 0 **/*.config*.js **/.eslintrc.js",
    "lint:config:dev": "pnpm lint:config -- --cache",
    "lint": "eslint --max-warnings 0 --ext ts,js .",
    "lint:dev": "pnpm lint -- --cache",
    "build": "tsc -b && pnpm postbuild",
    "postbuild": "pnpm m run postbuild",
    "watch": "tsc -b -w",
    "test": "pnpm m run test",
    "test:dev": "pnpm m run test:dev",
    "docs": "pnpm m run docs",
    "start": "pnpm -C packages/bot start"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "^13.0.0",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/travis-cli": "^12.0.1",
    "@commitlint/types": "^12.0.1",
    "@comrade-pingu/commitlint-plugin": "link:packages/commitlint-plugin",
    "@comrade-pingu/semantic-release": "link:packages/semantic-release",
    "@jest/types": "^26.6.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.21",
    "@types/markdown-it": "^12.0.1",
    "@types/node": "~12.12.70",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "commitizen": "^4.2.3",
    "commitlint": "^12.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "eslint": "~7.22.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-unicorn": "^29.0.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "markdown-it": "^12.0.4",
    "markdown-table": "^3.0.0",
    "multi-semantic-release": "^2.8.0",
    "prettier": "^2.2.1",
    "purgecss": "^4.0.3",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "type-fest": "^1.0.1",
    "typescript": "^4.2.3"
  }
}
