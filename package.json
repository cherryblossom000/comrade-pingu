{
  "name": "comrade-pingu",
  "version": "2.1.0",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu.git"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 --ext .js,ts .",
    "lint:dev": "pnpm run lint -- --cache",
    "copy": " (cd dist && mkdir assets; cp -r ../assets/img assets/img)",
    "build": "tsc -p tsconfig.build.json && pnpm run copy",
    "build:dev": "tsc -p tsconfig.build.json --sourceMap --incremental && pnpm run copy",
    "watch": "tsc -p tsconfig.build.json --sourceMap --incremental -w",
    "test": "jest",
    "test:dev": "jest -c jest.config.dev.js",
    "docs": "ts-node scripts/docs && mkdir dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@discordjs/opus": "0.3.2",
    "discord.js": "^12.2.0",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "lodash.shuffle": "^4.2.0",
    "lodash.startcase": "^4.4.0",
    "lodash.upperfirst": "^4.3.1",
    "mongodb": "^3.5.9",
    "ms": "^2.1.2",
    "node-fetch": "^2.6.0",
    "yt-search": "^1.1.2",
    "ytdl-core": "^2.1.7"
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "^4.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/estree": "^0.0.45",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.3",
    "@types/lodash.shuffle": "^4.2.6",
    "@types/lodash.startcase": "^4.4.6",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/markdown-it": "^10.0.1",
    "@types/markdown-table": "^2.0.0",
    "@types/mongodb": "^3.5.25",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.12.47",
    "@types/node-fetch": "^2.5.7",
    "@types/rewire": "^2.5.28",
    "@types/yt-search": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^28.6.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.1.0",
    "markdown-it": "^11.0.0",
    "markdown-table": "^2.0.0",
    "purgecss": "^2.3.0",
    "rewire": "^5.0.0",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
