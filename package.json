{
  "name": "comrade-pingu",
  "version": "1.3.0",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu.glitch.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu.git"
  },
  "main": "dist/src/server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "eslint . && jest --forceExit",
    "copy": " (cd dist && cp ../package.json package.json && mkdir assets; cp -r ../assets/img assets/img)",
    "build": "tsc -p tsconfig.build.json && pnpm run copy",
    "doc": "ts-node scripts/doc && mkdir dist/assets/css; purgecss -c purgecss.config.js -o dist/assets/css",
    "start": "node src/server",
    "test:dev": "jest -c jest.config.dev.js --forceExit",
    "build:dev": "tsc -p tsconfig.build.json --sourceMap --incremental && pnpm run copy",
    "watch": "tsc -watch -p tsconfig.build.json --sourceMap --incremental",
    "start:dev": "nodemon ."
  },
  "dependencies": {
    "@discordjs/opus": "^0.1.0",
    "@keyv/sqlite": "^2.0.2",
    "discord.js": "^12.0.2",
    "escape-string-regexp": "^2.0.0",
    "express": "^4.17.1",
    "keyv": "^4.0.0",
    "lodash.upperfirst": "^4.3.1",
    "ms": "^2.1.2",
    "yt-search": "^1.1.2",
    "ytdl-core": "^2.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/keyv": "^3.1.1",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/markdown-it": "^0.0.9",
    "@types/markdown-table": "^2.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.9.3",
    "@types/rewire": "^2.5.28",
    "@types/yt-search": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "markdown-it": "^10.0.0",
    "markdown-table": "^2.0.0",
    "purgecss": "^2.1.0",
    "rewire": "^5.0.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
