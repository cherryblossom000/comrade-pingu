{
  "name": "comrade-pingu",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/bot",
    "packages/commitlint-plugin",
    "packages/eslint-plugin",
    "packages/semantic-release"
  ],
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": "github:cherryblossom000/comrade-pingu",
  "engines": {
    "node": ">=16.6"
  },
  "type": "module",
  "main": "packages/bot/dist/src/server.js",
  "scripts": {
    "prepare": "husky install",
    "lint:config": "eslint --max-warnings 0 **/*.config*.cjs **/.eslintrc.cjs",
    "lint:config:dev": "pnpm lint:config -- --cache",
    "lint": "eslint --max-warnings 0 --ext ts,js .",
    "lint:dev": "pnpm lint -- --cache",
    "build": "tsc -b && pnpm postbuild",
    "postbuild": "echo '{\"type\": \"module\"}' | tee scripts/dist/package.json > packages/bot/scripts/dist/package.json && pnpm m run postbuild",
    "watch": "tsc -b -w",
    "clean": "trash '**/{*.tsbuildinfo,.eslintcache,dist}' '!**/node_modules/**'",
    "test": "pnpm m run test",
    "test:dev": "pnpm m run test:dev",
    "docs": "pnpm m run docs",
    "start": "pnpm -C packages/bot start"
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "15.0.0-beta.22",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/travis-cli": "^13.1.0",
    "@commitlint/types": "^13.1.0",
    "@comrade-pingu/commitlint-plugin": "link:packages/commitlint-plugin",
    "@comrade-pingu/semantic-release": "link:packages/semantic-release",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.1",
    "@types/markdown-it": "^12.2.1",
    "@types/node": "~16.9.1",
    "@types/url-shim": "link:packages/url-shim",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "commitizen": "^4.2.4",
    "commitlint": "^13.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "markdown-it": "^12.2.0",
    "markdown-table": "^3.0.1",
    "multi-semantic-release": "^2.8.5",
    "prettier": "^2.4.0",
    "purgecss": "^4.0.3",
    "semantic-release": "^17.4.7",
    "trash-cli": "^4.0.0",
    "type-fest": "^1.4.0",
    "typescript": "^4.4.3"
  }
}
