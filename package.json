{
  "name": "comrade-pingu",
  "version": "1.0.3",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://comrade-pingu.glitch.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/cherryblossom000/comrade-pingu.git"
  },
  "main": "src/server",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "test": "eslint . && jest",
    "build": "tsc -p tsconfig.build.json",
    "doc": "ts-node scripts/doc",
    "deploy": "(cd dist && git add . && git commit -m update && git push -f origin master)",
    "start": "node .",
    "test:dev": "jest -c jest.config.dev.js",
    "build:dev": "tsc -p tsconfig.build.json --sourceMap --incremental && rm -r dist/assets; cp -r assets dist/assets",
    "watch": "tsc -watch -p tsconfig.build.json --sourceMap --incremental",
    "start:dev": "pnpm run build:dev && nodemon dist/src/server"
  },
  "dependencies": {
    "discord.js": "^12.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash.upperfirst": "^4.3.1",
    "ms": "^2.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.3",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/markdown-it": "^0.0.9",
    "@types/markdown-table": "^2.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "jest-mock-console": "^1.0.0",
    "markdown-it": "^10.0.0",
    "markdown-table": "^2.0.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
