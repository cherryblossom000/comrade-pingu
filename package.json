{
  "name": "comrade-pingu",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/bot",
    "packages/commitlint-plugin",
    "packages/eslint-plugin",
    "packages/semantic-release"
  ],
  "homepage": "https://comrade-pingu--cherryblossom00.repl.co",
  "repository": "github:cherryblossom000/comrade-pingu",
  "engines": {
    "node": ">=12"
  },
  "main": "packages/bot/dist/src/server",
  "scripts": {
    "prepare": "husky install",
    "lint:config": "eslint --max-warnings 0 **/*.config*.js **/.eslintrc.js",
    "lint:config:dev": "pnpm lint:config -- --cache",
    "lint": "eslint --max-warnings 0 --ext ts,js .",
    "lint:dev": "pnpm lint -- --cache",
    "build": "tsc -b && pnpm _postbuild",
    "_postbuild": "echo '{\"type\": \"module\"}' | tee scripts/dist/package.json > packages/bot/scripts/dist/package.json && pnpm m run _postbuild",
    "watch": "tsc -b -w",
    "clean": "trash '**/{*.tsbuildinfo,dist}' '!**/node_modules/**'",
    "test": "pnpm m run test",
    "test:dev": "pnpm m run test:dev",
    "docs": "pnpm m run docs",
    "start": "pnpm -C packages/bot start"
  },
  "devDependencies": {
    "@cherryblossom/eslint-config": "15.0.0-beta.10",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/travis-cli": "^12.1.4",
    "@commitlint/types": "^12.1.4",
    "@comrade-pingu/commitlint-plugin": "link:packages/commitlint-plugin",
    "@comrade-pingu/semantic-release": "link:packages/semantic-release",
    "@jest/types": "^27.0.6",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.24",
    "@types/markdown-it": "^12.0.3",
    "@types/node": "~12.12.70",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "markdown-it": "^12.1.0",
    "markdown-table": "^3.0.1",
    "multi-semantic-release": "^2.8.2",
    "prettier": "^2.3.2",
    "purgecss": "^4.0.3",
    "semantic-release": "^17.4.4",
    "trash-cli": "^4.0.0",
    "ts-jest": "^27.0.3",
    "type-fest": "^1.2.2",
    "typescript": "^4.3.5"
  }
}
