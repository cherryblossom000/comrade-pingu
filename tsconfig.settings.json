{
  "exclude": ["node_modules/", "dist/"],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  }
}
