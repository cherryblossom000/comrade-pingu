{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch (main)",
      "type": "npm",
      "script": "watch",
      "path": "packages/bot/",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/bot"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch (eslint-plugin)",
      "type": "npm",
      "script": "watch",
      "path": "packages/eslint-plugin/",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/eslint-plugin"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Watch (semantic-release)",
      "type": "npm",
      "script": "watch",
      "path": "packages/semantic-release/",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/semantic-release"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
