{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch (all)",
      "command": "pnpm",
      "args": ["watch"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Watch (bot)",
      "command": "pnpm",
      "args": ["-C", "packages/bot", "watch"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/bot"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch (commitlint-plugin)",
      "command": "pnpm",
      "args": ["-C", "packages/commitlint-plugin", "watch"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/commitlint-plugin"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Watch (eslint-plugin)",
      "command": "pnpm",
      "args": ["-C", "packages/eslint-plugin", "watch"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/eslint-plugin"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Watch (semantic-release)",
      "command": "pnpm",
      "args": ["-C", "packages/semantic-release", "watch"],
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/semantic-release"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Build (all)",
      "command": "pnpm",
      "args": ["build"],
      "problemMatcher": "$tsc",
      "group": "build"
    },
  ]
}
