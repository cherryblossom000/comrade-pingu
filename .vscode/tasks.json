{
  "version": "2.0.0",
  "tasks": [
    // Can't use npm scripts because of pnpm workspace
    {
      "label": "Watch (main)",
      "type": "shell",
      "command": "pnpm -C packages/bot watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/bot"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch (eslint-plugin)",
      "type": "shell",
      "command": "pnpm -C packages/eslint-plugin watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/eslint-plugin"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "Watch (semantic-release)",
      "type": "shell",
      "command": "pnpm -C packages/semantic-release watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/packages/semantic-release"]
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
